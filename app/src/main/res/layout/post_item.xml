<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:id="@+id/post_card_view"
    app:cardCornerRadius="7dp"
    app:cardElevation="3dp"
    android:elevation="12dp"
    app:cardBackgroundColor="#eef2f3"
    android:layout_margin="1dp">

    <RelativeLayout
        android:id="@+id/re_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/post_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="56dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="纵观技术的发展，紧跟时代的潮流，活在自己的世界，分享技术的小圈。上谈【安卓】，下论【苹果】。以扯淡的态度，面对操蛋的技术，用幽默的语言，诠释开发的经典。"
            android:textColor="@color/black"
           android:textSize="15dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/post_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/post_money_text"
                    android:layout_width="wrap_content"
                    android:text="价值："
                    android:layout_marginLeft="10dp"
                    android:textSize="11dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/post_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="165"
                    android:textSize="11dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/post_authorName"
                    android:layout_width="wrap_content"
                    android:text="username"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/post_CreateTime"
                    android:layout_marginTop="4dp"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:text="2017/06/01"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/post_solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/icon_solved2"
        android:visibility="gone"
        />
</android.support.v7.widget.CardView>

